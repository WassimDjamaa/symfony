{% extends 'base.html.twig' %}

{% block title %}Answers index
{% endblock %}

{% block body %}
	<h1>Question :
		{{ questions.libelle }}</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Libelle</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for answer in answers %}
				<tr>
					<td>{{ answer.id }}</td>
					<td>{{ answer.libelle }}</td>
					<td>
						<a href="{{ path('answers_show', {'id': answer.id}) }}">show</a>
						<a href="{{ path('answers_edit', {'id': answer.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('answers_new', {'id': questions.id}) }}">Create new</a>
{% endblock %}
