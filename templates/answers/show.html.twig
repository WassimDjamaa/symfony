{% extends 'base.html.twig' %}

{% block title %}Réponses{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Réponses</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ answer.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('answers_index') }}">Retour à la liste</a>

    <a href="{{ path('answers_edit', {'id': answer.id}) }}">Editer</a>
    <a href="{{ path('answers_delete', {'id': answer.id}) }}">Supprimer</a>

    {{ include('answers/_delete_form.html.twig') }}
</div>
{% endblock %}
