{% extends 'base.html.twig' %}

{% block title %}Result index{% endblock %}

{% block body %}
    <h1>Result index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Result_state</th>
                <th>Adress_ip</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.id }}</td>
                <td>{{ result.resultState ? 'Yes' : 'No' }}</td>
                <td>{{ result.adressIp }}</td>
                <td>
                    <a href="{{ path('result_show', {'id': result.id}) }}">show</a>
                    <a href="{{ path('result_edit', {'id': result.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('result_new') }}">Create new</a>
{% endblock %}
