{% extends 'base.html.twig' %}

{% block title %}Mes Questions
{% endblock %}

{% block body %}
	<h1>Mes Questions</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Libelle</th>
				<th>Is_multiple</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for question in questions %}
				<tr>
					<td>{{ question.id }}</td>
					<td>{{ question.libelle }}</td>
					<td>{{ question.isMultiple ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('answers_index', {'id': question.id}) }}">Réponse(s)</a>
						<a href="{{ path('questions_answer', {'id': question.id}) }}">Questionnaire</a>
		
						<a href="{{ path('questions_edit', {'id': question.id}) }}">Editer</a>
						<a href="{{ path('questions_result', {'id': question.id}) }}">Résultat</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('questions_new') }}">Create new</a>

	{% for message in app.flashes('success') %}
		<div class="alert alert-danger" role="alert">{{ message }}</div>
	{% endfor %}


{% endblock %}
